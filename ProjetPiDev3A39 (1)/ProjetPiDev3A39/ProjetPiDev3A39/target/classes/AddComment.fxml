<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddCommentController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Add Comment"/>

    <Label text="User:"/>
    <ComboBox fx:id="userComboBox" prefWidth="200"/>

    <Label text="Comment:"/>
    <TextArea fx:id="commentTextArea" prefHeight="100" wrapText="true"/>

    <Label text="Consultation ID:"/>
    <TextField fx:id="consultationIdField"/>

    <Label text="Report Reason (optional):"/>
    <TextField fx:id="reportReasonField"/>

    <Label text="Reported:"/>
    <CheckBox fx:id="reportedCheckBox"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#saveComment"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>
