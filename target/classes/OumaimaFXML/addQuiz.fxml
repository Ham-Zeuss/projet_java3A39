<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.Oumaima.addQuizcontroller"
            prefWidth="600.0" prefHeight="400.0">

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Label text="Ajouter un Quiz" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="titleField" promptText="Titre du Quiz" />
            <TextArea fx:id="descriptionArea" promptText="Description" prefRowCount="3" />
            <TextField fx:id="durationField" promptText="Durée (minutes)" />
            <TextField fx:id="dateCreationField" promptText="Date de création" editable="false" />

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Cours :" />
                <ComboBox fx:id="coursComboBox" prefWidth="200.0" />
            </HBox>

            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="createButton" text="Créer Quiz" onAction="#handleCreateQuiz" />
                <Button fx:id="returnButton" text="Retour" onAction="#goBackToQuizList" />
            </HBox>
        </children>
        <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
        </padding>
    </VBox>
</AnchorPane>