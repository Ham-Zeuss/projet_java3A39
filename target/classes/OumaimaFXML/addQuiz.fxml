<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.Oumaima.addQuizcontroller"
            prefWidth="800.0" prefHeight="600.0"
            style="-fx-background-color: white;">
    <stylesheets>
        <URL value="@/css/addquiz.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="15.0" styleClass="card" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Label text="Ajouter un Quiz" styleClass="heading" />

            <TextField fx:id="titleField" promptText="Titre du Quiz" styleClass="input-field" prefWidth="400.0" />
            <TextArea fx:id="descriptionArea" promptText="Description" styleClass="input-field" prefRowCount="4" prefWidth="400.0" />
            <TextField fx:id="durationField" promptText="Durée (minutes)" styleClass="input-field" prefWidth="400.0" />
            <TextField fx:id="dateCreationField" promptText="Date de création" styleClass="input-field" prefWidth="400.0" editable="false" />

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Cours :" styleClass="para" />
                <ComboBox fx:id="coursComboBox" prefWidth="200.0" styleClass="combo-box" />
            </HBox>

            <HBox spacing="15.0" alignment="CENTER" styleClass="button-container">
                <Button fx:id="createButton" text="Créer Quiz" styleClass="quiz-button" prefWidth="150.0" onAction="#handleCreateQuiz" />
                <Button fx:id="returnButton" text="Retour" styleClass="return-button" prefWidth="150.0" onAction="#goBackToQuizList" />
            </HBox>
        </children>
        <padding>
            <Insets top="30" right="30" bottom="30" left="30" />
        </padding>
    </VBox>
</AnchorPane>