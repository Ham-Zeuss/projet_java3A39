<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="Controller.Oumaima.affichageQuestionBack" prefHeight="600" prefWidth="800"
            style="-fx-background-color: #eceff1;">
    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Questions du Quiz (Backend)" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" />
            <Button fx:id="backButton" text="Retour" styleClass="back-button" onAction="#goBackToQuizList" />
        </HBox>
        <ScrollPane fitToWidth="true">
            <TableView fx:id="questionTable" prefHeight="500">
                <columns>
                    <TableColumn fx:id="textColumn" text="Question" prefWidth="250" />
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100" />
                    <TableColumn fx:id="optionsColumn" text="Options" prefWidth="300" />
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="150" />
                </columns>
            </TableView>
        </ScrollPane>
    </VBox>
</AnchorPane>