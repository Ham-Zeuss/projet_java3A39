<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.Oumaima.UpdateQuizBck"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

        <Label text="Modifier le Quiz" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TextField fx:id="titleField" promptText="Titre du Quiz"/>
        <TextArea fx:id="descriptionArea" promptText="Description" prefRowCount="4"/>
        <TextField fx:id="durationField" promptText="Durée en minutes"/>
        <ComboBox fx:id="courseComboBox" promptText="Sélectionnez un cours"/>

        <HBox spacing="10">
            <Button fx:id="updateButton"
                    text="Enregistrer les modifications"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <!-- New Return Button -->
            <Button fx:id="returnButton"
                    text="Retour à la liste des quiz"
                    style="-fx-background-color: #007BFF; -fx-text-fill: white;"
                    onAction="#returnToAffichageQuiz"/>
        </HBox>
    </VBox>
</AnchorPane>