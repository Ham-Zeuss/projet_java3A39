<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Oumaima.UpdateQuizBck"
      prefHeight="600.0" prefWidth="800.0"
      spacing="15">
    <stylesheets>
        <URL value="@/css/displayprofilesback.css"/>
    </stylesheets>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="returnButton" styleClass="icon-button" onAction="#returnToAffichageQuiz"/>
        <Label text="Modifier le Quiz"/>
    </HBox>

    <!-- Form Container -->
    <VBox spacing="15" alignment="CENTER">
        <TextField fx:id="titleField" promptText="Titre du Quiz" prefWidth="400"/>
        <TextArea fx:id="descriptionArea" promptText="Description" prefRowCount="4" prefWidth="400"/>
        <TextField fx:id="durationField" promptText="Durée en minutes" prefWidth="400"/>
        <ComboBox fx:id="courseComboBox" promptText="Sélectionnez un cours" prefWidth="400"/>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="updateButton" styleClass="icon-button" onAction="#updateQuiz"/>
        </HBox>
    </VBox>

</VBox>