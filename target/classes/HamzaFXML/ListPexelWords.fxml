<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Ham.ListPexelWordsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Pexel Words List" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TableView fx:id="pexelWordsTable" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="100.0"/>
            <TableColumn fx:id="wordColumn" text="Word" prefWidth="250.0"/>
            <TableColumn fx:id="difficultyColumn" text="Difficulty" prefWidth="250.0"/>
        </columns>
    </TableView>

    <HBox spacing="10.0" alignment="CENTER">
        <Button fx:id="createButton" text="Create New Word" onAction="#handleCreate"/>
        <Button fx:id="updateButton" text="Update Selected Word" onAction="#handleUpdate" disable="true"/>
        <Button fx:id="deleteButton" text="Delete Selected Word" onAction="#handleDelete" disable="true"/>
    </HBox>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
</VBox>