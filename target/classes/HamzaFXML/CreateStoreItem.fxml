<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Ham.CreateStoreItemController" spacing="15" alignment="CENTER" style="-fx-padding: 20;"
      >
    <Label text="Create New Store Item" styleClass="header-label"/>
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Enter item name" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" promptText="Enter description" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="100" prefWidth="300"/>

        <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" promptText="Enter price" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300"/>

        <Label text="Image URL:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="imageField" promptText="Enter image URL" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300"/>

        <Label text="Stock:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="stockField" promptText="Enter stock quantity" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300"/>
    </GridPane>
    <Label fx:id="errorLabel" styleClass="error-label"/>
    <Button text="Add Item" onAction="#handleAddItem" styleClass="add-button"/>
</VBox>