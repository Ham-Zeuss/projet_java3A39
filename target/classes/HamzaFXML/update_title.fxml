<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.Ham.UpdateTitleController"
            prefWidth="400" prefHeight="300">
    <children>
        <Label text="Update Title" layoutX="150" layoutY="20"/>

        <Label text="Name:" layoutX="50" layoutY="70"/>
        <TextField fx:id="nameField" layoutX="150" layoutY="70" prefWidth="200"/>

        <Label text="Points Required:" layoutX="50" layoutY="110"/>
        <TextField fx:id="pointsField" layoutX="150" layoutY="110" prefWidth="200"/>

        <Label text="Price:" layoutX="50" layoutY="150"/>
        <TextField fx:id="priceField" layoutX="150" layoutY="150" prefWidth="200"/>

        <Button text="Save" onAction="#handleSave" layoutX="150" layoutY="200"/>
    </children>
</AnchorPane>
