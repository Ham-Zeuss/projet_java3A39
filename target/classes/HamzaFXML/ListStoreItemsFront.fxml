<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Ham.ListStoreItemsFrontController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Store Items" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-font-family: 'Bubblegum Sans'; -fx-fill: #0a6375;"/>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" pannable="true">
        <content>
            <GridPane fx:id="itemsGrid" hgap="30.0" vgap="30.0" alignment="CENTER"/>
        </content>
    </ScrollPane>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red; -fx-font-family: 'Bubblegum Sans'; -fx-font-size: 14;"/>
</VBox>