<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="leaderboardRoot" alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Ham.LeaderboardController"
      style="-fx-background-color: #f0f4ff;">
    <padding>
        <Insets top="40.0" right="50.0" bottom="40.0" left="50.0"/>
    </padding>

    <Label text="TEAM LEADERBOARD" styleClass="leaderboard-title"/>

    <HBox fx:id="top3Row" alignment="CENTER" spacing="30.0">
        <!-- 2nd Place (Left) -->
        <VBox alignment="CENTER" styleClass="top3-card,silver-border" fx:id="card2" spacing="10">
            <ImageView fx:id="profilePic2" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="profile-image"/>
            <Label fx:id="name2" styleClass="top3-name"/>
            <Label fx:id="score2" styleClass="top3-score"/>
            <Label fx:id="title2" styleClass="top3-title"/>
            <Label fx:id="message2" styleClass="top3-message"/>
        </VBox>
        <!-- 1st Place (Center, Taller) -->
        <VBox alignment="CENTER" styleClass="top3-card,gold-border" fx:id="card1" spacing="14">
            <ImageView fx:id="profilePic1" fitHeight="140.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true" styleClass="profile-image"/>
            <Label fx:id="name1" styleClass="top3-name"/>
            <Label fx:id="score1" styleClass="top3-score"/>
            <Label fx:id="title1" styleClass="top3-title"/>
            <Label fx:id="message1" styleClass="top3-message"/>
        </VBox>
        <!-- 3rd Place (Right) -->
        <VBox alignment="CENTER" styleClass="top3-card,bronze-border" fx:id="card3" spacing="10">
            <ImageView fx:id="profilePic3" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="profile-image"/>
            <Label fx:id="name3" styleClass="top3-name"/>
            <Label fx:id="score3" styleClass="top3-score"/>
            <Label fx:id="title3" styleClass="top3-title"/>
            <Label fx:id="message3" styleClass="top3-message"/>
        </VBox>
    </HBox>

    <VBox fx:id="lowerRanksBox" spacing="15.0" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
        <HBox alignment="CENTER_LEFT" styleClass="leaderboard-header-row">
            <Label text="Rank" styleClass="header-label" minWidth="60" maxWidth="60"/>
            <Label text="User" styleClass="header-label" minWidth="200" maxWidth="200"/>
            <Label text="Score" styleClass="header-label" minWidth="120" maxWidth="120"/>
            <Label text="Title" styleClass="header-label" minWidth="150" maxWidth="150"/>
            <Label text="Message" styleClass="header-label" minWidth="220" maxWidth="220"/>
        </HBox>
    </VBox>

    <Label fx:id="errorLabel" text="" styleClass="error-label"/>
</VBox>