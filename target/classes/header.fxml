<?xml version="1.0" encoding="UTF-8"?>
    <?import javafx.scene.layout.VBox?>
    <?import javafx.scene.layout.HBox?>
    <?import javafx.scene.control.Button?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.HeaderController" fx:id="headerController"
      alignment="CENTER" prefHeight="490.0" prefWidth="1800.0">
        <HBox styleClass="app-custom-navbar" alignment="CENTER" spacing="0">
            <Button fx:id="homeButton" styleClass="app-nav-button" onAction="#showHomeDropdown" prefHeight="90" prefWidth="240">
                <graphic>
                    <HBox alignment="CENTER" spacing="5">
                        <ImageView fx:id="homeIcon" styleClass="hover-icon" />
                        <Label text="Home" styleClass="button-text" />
                    </HBox>
                </graphic>
            </Button>





            <Button fx:id="learnButton" styleClass="app-nav-button" onAction="#showLearnDropdown" prefHeight="90" prefWidth="240">
            <graphic>
                <HBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="learnIcon" styleClass="hover-icon" />
                    <Label text="Learn" styleClass="button-text" />
                </HBox>
            </graphic>
            </Button>


            <Button fx:id="doctorsButton"  styleClass="app-nav-button" onAction="#showDoctorsDropdown" prefHeight="90" prefWidth="240">
                <graphic>
                    <HBox alignment="CENTER" spacing="5">
                        <ImageView fx:id="doctorsIcon" styleClass="hover-icon" />
                        <Label text="Doctors" styleClass="button-text" />
                    </HBox>
                </graphic>
            </Button>




            <Button fx:id="gamesButton"  styleClass="app-nav-button" onAction="#showGamesDropdown" prefHeight="90" prefWidth="240">
            <graphic>
                <HBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="gamesIcon" styleClass="hover-icon" />
                    <Label text="Games" styleClass="button-text" />
                </HBox>
            </graphic>
        </Button>




    <Button fx:id="packsButton" styleClass="app-nav-button" onAction="#showPacksDropdown" prefHeight="90" prefWidth="240">
        <graphic>
            <HBox alignment="CENTER" spacing="5">
                <ImageView fx:id="packsIcon" styleClass="hover-icon" />
                <Label text="Packs" styleClass="button-text" />
            </HBox>
        </graphic>
    </Button>
        </HBox>
    </VBox>
