<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="10" styleClass="report-vbox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Maryem.ReportCommentController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Report Comment" styleClass="title"/>
    <Label text="Please select the reason(s) for reporting this comment:" styleClass="label"/>

    <CheckBox fx:id="inappropriateCheckBox" text="Inappropriate Content" styleClass="checkbox"/>
    <CheckBox fx:id="spamCheckBox" text="Spam" styleClass="checkbox"/>
    <CheckBox fx:id="offensiveCheckBox" text="Offensive Language" styleClass="checkbox"/>

    <Label fx:id="errorLabel" text="" styleClass="error-label"/>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="submitButton" text="Submit" onAction="#submitReport" styleClass="button" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-font-weight: bold;">
            <graphic>
                <ImageView fitWidth="55" fitHeight="55" preserveRatio="true">
                    <Image url="https://img.icons8.com/?size=100&amp;id=94194&amp;format=png&amp;color=000000"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="cancelButton" text="Cancel" onAction="#cancel" styleClass="button" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-font-weight: bold;">
            <graphic>
                <ImageView fitWidth="55" fitHeight="55" preserveRatio="true">
                    <Image url="https://img.icons8.com/?size=100&amp;id=97745&amp;format=png&amp;color=000000"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</VBox>