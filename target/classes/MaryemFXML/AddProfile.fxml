                        <Image url="@../Images/kidslightlogo.png" />
                    </image>
                </ImageView>
                <Label text="Bienvenue Chez " textFill="WHITE" AnchorPane.topAnchor="341.0" AnchorPane.leftAnchor="118.0">
                    <font>
                        <Font name="Barlow Bold" size="17.0" />
                    </font>
                </Label>
                <Label text="KIDS" textFill="WHITE" AnchorPane.topAnchor="362.0" AnchorPane.leftAnchor="151.0">
                    <font>
                        <Font name="Impact" size="24.0" />
                    </font>
                </Label>
                <ImageView fitHeight="72.0" fitWidth="114.0" pickOnBounds="true" preserveRatio="true" AnchorPane.topAnchor="21.0" AnchorPane.leftAnchor="22.0">
