                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addProfile" prefHeight="27.0" prefWidth="150.0" style="-fx-background-color: #0a6375;" text="Ajouter Profil" textFill="WHITE" AnchorPane.topAnchor="735.0" AnchorPane.leftAnchor="58.0">
                    <font>
                        <Font name="Ebrima Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" prefHeight="27.0" prefWidth="150.0" style="-fx-background-color: #0a6375;" text="Annuler" textFill="WHITE" AnchorPane.topAnchor="735.0" AnchorPane.leftAnchor="214.0">
