<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Boubaker.MainBoubakerController"
      alignment="TOP_CENTER" spacing="30" styleClass="main-container">

    <!-- Reference to the CSS file -->
    <stylesheets>
        <URL value="@/style.css" />
    </stylesheets>

    <!-- Title -->
    <Label text="Our Packs" styleClass="main-title" />

    <!-- Pack Container -->
    <HBox fx:id="packContainer" alignment="CENTER" spacing="40" styleClass="pack-container">
        <!-- Pack cards will be dynamically added here by the controller -->
    </HBox>
</VBox>