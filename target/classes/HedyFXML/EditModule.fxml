<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Hedy.Dahsboard.EditModuleController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="400"
      stylesheets="@/css/DesignFrontHedy.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Modifier un Module" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Module Title -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Titre :" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="titleField" prefWidth="250" promptText="Entrez le titre du module" />
    </HBox>

    <!-- Description -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Description :" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="descriptionField" prefWidth="250" promptText="Entrez la description" />
    </HBox>

    <!-- Number of Courses -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nombre de Cours :" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="nombreCoursField" prefWidth="250" promptText="Entrez le nombre de cours" />
    </HBox>

    <!-- Level -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Niveau :" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="levelField" prefWidth="250" promptText="Entrez le niveau" />
    </HBox>

    <!-- Action Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button  text="Annuler" onAction="#cancel" styleClass="button-Reinitialiser" />
        <Button text="Enregistrer" onAction="#saveChanges" styleClass="button-Enregistrer" />
    </HBox>
</VBox>
