<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Hedy.EditCoursController"
      spacing="20" alignment="CENTER"
      style="-fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="400">

    <Label text="Modifier un Cours" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Course Title -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Titre:" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="titleField" prefWidth="250" promptText="Entrez le titre du cours" />
    </HBox>

    <!-- PDF Name -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="PDF:" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
        <TextField fx:id="pdfNameField" prefWidth="200" promptText="Nom du fichier PDF" editable="false" />
        <Button text="Choisir Fichier" onAction="#selectPdfFile"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 15 8 15;" />
    </HBox>

    <!-- Buttons -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="Annuler" onAction="#cancel" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-padding: 8 15 8 15;" />
        <Button text="Enregistrer" onAction="#saveCours" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 15 8 15;" />
    </HBox>
</VBox>