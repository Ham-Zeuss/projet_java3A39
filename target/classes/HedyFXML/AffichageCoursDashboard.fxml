<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.Hedy.Dahsboard.AffichageCoursDashboardHedy"
            style="-fx-background-color: #f5f5f5;"
            prefHeight="600" prefWidth="1000" stylesheets="@/css/DesignDashboardHedy.css">

    <!-- Header with Module Title -->
    <VBox spacing="10" style="-fx-padding: 15;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label fx:id="moduleTitleLabel"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <Label fx:id="courseCountLabel"
               style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <!-- Button to Add Course -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button text="Ajouter Cours" onAction="#goToAjoutCours"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15 8 15;"/>
    </HBox>

    <!-- TableView to display course list -->
    <TableView fx:id="coursTable"
               AnchorPane.topAnchor="120"
               AnchorPane.bottomAnchor="60"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               style="-fx-table-cell-border-visible: false;">
        <columns>
            <TableColumn text="Titre" fx:id="titleCol" prefWidth="200"/>
            <TableColumn text="PDF" fx:id="pdfCol" prefWidth="200"/>
            <TableColumn text="DerniÃ¨re Modification" fx:id="updatedAtCol" prefWidth="200"/>
            <TableColumn text="Actions" fx:id="actionsCol" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>