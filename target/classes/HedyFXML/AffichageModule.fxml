<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.Hedy.AffichageModuleController"
            style="-fx-background-color: #f5f5f5;"
            prefHeight="600.0" prefWidth="1000.0"
            stylesheets="@/css/DesignFrontHedy.css">

    <!-- Header with Add Button -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="Liste des Modules" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Grid for Module Cards -->
    <ScrollPane fitToWidth="true" AnchorPane.topAnchor="60" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40" bottom="40" left="20" right="20"/>
            </padding>
            <GridPane fx:id="modulesGrid"
                      hgap="30"
                      vgap="30"
                      alignment="CENTER">
                <padding>
                    <Insets top="20" bottom="20" left="20" right="20"/>
                </padding>
            </GridPane>
        </VBox>
    </ScrollPane>
</AnchorPane>