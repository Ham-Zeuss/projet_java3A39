<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" styleClass="root" stylesheets="@../style/notifications.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.NotificationController">
    <!-- Header with Icon and Title -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
        <ImageView fx:id="notificationIcon" fitHeight="30" fitWidth="30">
            <Image url="https://img.icons8.com/?size=100&amp;id=bhqmYOa5Acgy&amp;format=png&amp;color=000000"/>
        </ImageView>
        <Label text="Notifications" styleClass="title"/>
    </HBox>

    <!-- Table View for Notifications -->
    <TableView fx:id="notificationTable" prefHeight="500" prefWidth="700" styleClass="notification-table">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" styleClass="column-header"/>
            <TableColumn fx:id="messageColumn" prefWidth="400" text="Message" styleClass="column-header"/>
            <TableColumn fx:id="createdAtColumn" prefWidth="200" text="Créé le" styleClass="column-header"/>
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="clearAllButton" onAction="#handleClearAll" text="Effacer Tout" styleClass="btn-danger"/>
    </HBox>
</VBox>