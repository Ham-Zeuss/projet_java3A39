<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.lang.String?>
<VBox spacing="20" styleClass="root" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.UserController">

    <Label styleClass="title" text="Gestion des Utilisateurs"/>

    <!-- Statistics Dashboard -->
    <HBox spacing="20" styleClass="stats-container">
        <!-- Total Users Card -->
        <VBox fx:id="totalUsersCard" spacing="10" styleClass="stat-card" onMouseClicked="#handleTotalUsersClick">
            <Label text="Total Utilisateurs" styleClass="stat-title"/>
            <Label fx:id="totalUsersLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <!-- Active/Inactive Users Card -->
        <VBox fx:id="activeInactiveCard" spacing="10" styleClass="stat-card"
              onMouseClicked="#handleActiveInactiveClick">
            <Label text="Actifs/Inactifs" styleClass="stat-title"/>
            <Label fx:id="activeUsersLabel" text="0 / 0" styleClass="stat-value"/>
        </VBox>
        <!-- Users by Role Card -->
        <VBox fx:id="roleUsersCard" spacing="10" styleClass="stat-card" onMouseClicked="#handleRoleUsersClick">
            <Label text="Utilisateurs Médecins" styleClass="stat-title"/>
            <Label fx:id="roleUsersLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <!-- Role Distribution Pie Chart -->
        <VBox spacing="10" styleClass="stat-card">
            <Label text="Répartition des Rôles" styleClass="stat-title"/>
            <PieChart fx:id="rolesPieChart" prefWidth="250" prefHeight="200"/>
        </VBox>
    </HBox>

    <HBox spacing="30">
        <!-- Partie gauche - Formulaire -->
        <VBox spacing="15" styleClass="card">
            <Label styleClass="subtitle" text="Formulaire Utilisateur"/>

            <GridPane hgap="10" vgap="12">
                <!-- Nom -->
                <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nomField" promptText="Entrez le nom" styleClass="text-field" GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>
                <Label fx:id="nomError" styleClass="error-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                <!-- Prénom -->
                <Label text="Prénom :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="prenomField" promptText="Entrez le prénom" styleClass="text-field"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="prenomError" styleClass="error-label" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                <!-- Email -->
                <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="emailField" promptText="Entrez l'email" styleClass="text-field"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="emailError" styleClass="error-label" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                <!-- Mot de passe -->
                <Label text="Mot de passe :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <PasswordField fx:id="passwordField" promptText="Entrez le mot de passe" styleClass="text-field"
                               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label fx:id="passwordError" styleClass="error-label" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

                <!-- Confirmation mot de passe -->
                <Label text="Confirmer :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirmez le mot de passe"
                               styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="confirmPasswordError" styleClass="error-label" GridPane.columnIndex="2"
                       GridPane.rowIndex="4"/>

                <!-- Rôles -->
                <Label text="Rôles :" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <ListView fx:id="rolesList" prefHeight="100" prefWidth="200" GridPane.columnIndex="1"
                          GridPane.rowIndex="5">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="ROLE_ADMIN"/>
                            <String fx:value="ROLE_USER"/>
                            <String fx:value="ROLE_GUEST"/>
                        </FXCollections>
                    </items>
                </ListView>
                <Label fx:id="rolesError" styleClass="error-label" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

                <!-- Actif -->
                <Label text="Actif :" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <CheckBox fx:id="activeCheckBox" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>

            <!-- Boutons d'actions -->
            <HBox spacing="10">
                <Button fx:id="addButton" onAction="#handleAddUser" styleClass="btn-success" text="Ajouter"/>
                <Button fx:id="updateButton" onAction="#handleUpdateUser" styleClass="btn-primary" text="Modifier"/>
                <Button onAction="#handleDeleteUser" styleClass="btn-danger" text="Supprimer"/>
                <Button onAction="#handleClearForm" styleClass="btn-secondary" text="Effacer"/>
            </HBox>
        </VBox>

        <!-- Partie droite - Tableau -->
        <VBox spacing="10">
            <TextField fx:id="searchField" promptText="Rechercher par nom, prénom ou email" styleClass="text-field"/>
            <Button onAction="#handleShowNotifications" styleClass="btn-info">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="https://img.icons8.com/?size=100&amp;id=bhqmYOa5Acgy&amp;format=png&amp;color=000000"/>
                    </ImageView>
                </graphic>
            </Button>
            <TableView fx:id="userTable" prefHeight="500" prefWidth="700" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50" text="ID"/>
                    <TableColumn fx:id="nomColumn" prefWidth="120" text="Nom"/>
                    <TableColumn fx:id="prenomColumn" prefWidth="120" text="Prénom"/>
                    <TableColumn fx:id="emailColumn" prefWidth="180" text="Email"/>
                    <TableColumn fx:id="rolesColumn" prefWidth="180" text="Rôles"/>
                    <TableColumn fx:id="activeColumn" prefWidth="50" text="Actif"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox>