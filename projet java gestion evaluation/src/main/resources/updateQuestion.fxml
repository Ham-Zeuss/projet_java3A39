<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.UpdateQuestionController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #eceff1;">
    <stylesheets>
        <URL value="@css/styles.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <!-- Titre -->
        <Label text="Modifier une Question" style="-fx-font-weight: bold; -fx-text-fill: #2d3748;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <!-- Champ Question -->
        <TitledPane text="Question" collapsible="false">
            <content>
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <TextArea fx:id="questionTextArea" promptText="Entrez le texte de la question" prefWidth="700.0" prefHeight="100.0"/>
                </VBox>
            </content>
        </TitledPane>

        <!-- Type de question -->
        <TitledPane text="Type de Question" collapsible="false">
            <content>
                <HBox spacing="20.0" alignment="CENTER_LEFT">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <RadioButton fx:id="radioType" text="RadioButton (Choix unique)">
                        <toggleGroup>
                            <ToggleGroup fx:id="questionTypeGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="checkboxType" text="CheckBox (Choix multiple)" toggleGroup="$questionTypeGroup"/>
                </HBox>
            </content>
        </TitledPane>

        <!-- Options -->
        <TitledPane text="Options de RÃ©ponse" collapsible="false">
            <content>
                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Option 1:" prefWidth="100.0"/>
                        <TextField fx:id="option1Field" promptText="Entrez l'option 1" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption1" text="Correcte"/>
                    </HBox>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Option 2:" prefWidth="100.0"/>
                        <TextField fx:id="option2Field" promptText="Entrez l'option 2" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption2" text="Correcte"/>
                    </HBox>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Option 3:" prefWidth="100.0"/>
                        <TextField fx:id="option3Field" promptText="Entrez l'option 3" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption3" text="Correcte"/>
                    </HBox>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Option 4:" prefWidth="100.0"/>
                        <TextField fx:id="option4Field" promptText="Entrez l'option 4" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption4" text="Correcte"/>
                    </HBox>
                </VBox>
            </content>
        </TitledPane>

        <!-- Boutons -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="updateQuestionButton"
                    text="Modifier"
                    onAction="#handleUpdateQuestion"
                    styleClass="update-button"
                    prefWidth="120" />
            <Button fx:id="cancelButton"
                    text="Annuler"
                    onAction="#handleCancel"
                    styleClass="delete-button"
                    prefWidth="120" />
        </HBox>
    </VBox>
</AnchorPane>