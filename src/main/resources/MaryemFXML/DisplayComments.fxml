<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Maryem.DisplayCommentsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text fx:id="title" text="Comments for Profile" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TableView fx:id="commentsTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="userNameColumn" text="User Name" prefWidth="150"/>
            <TableColumn fx:id="commentColumn" text="Comment" prefWidth="200"/>
            <TableColumn fx:id="consultationIdColumn" text="Consultation ID" prefWidth="100" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="reportReasonColumn" text="Report Reason" prefWidth="150"/>
            <TableColumn fx:id="reportedColumn" text="Reported" prefWidth="80" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>
        <stylesheets>
            <URL value="@/css/displayprofilesback.css"/>
        </stylesheets>
    </TableView>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
</VBox>