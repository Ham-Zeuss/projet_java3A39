<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Maryem.AddCommentController" spacing="10" stylesheets="@/css/styles.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Add Comment"/>

    <Label text="Comment:"/>
    <TextArea fx:id="commentTextArea" prefHeight="100" wrapText="true"/>

    <Label text="Report Reason (optional):"/>
    <TextField fx:id="reportReasonField"/>

    <Label text="Reported:"/>
    <CheckBox fx:id="reportedCheckBox"/>

    <HBox spacing="10">
        <Button fx:id="saveButton" onAction="#saveComment"/>
        <Button fx:id="cancelButton" onAction="#cancel"/>
    </HBox>
    <stylesheets>
        <URL value="@/css/CommentsStyle.css"/>

    </stylesheets>
    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>