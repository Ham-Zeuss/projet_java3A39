<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Maryem.DisplayConsultationsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Consultations List" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <Button fx:id="addButton" text="Add Consultation" onAction="#openAddWindow"/>

    <TableView fx:id="consultationsTable" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="editColumn" text="Edit" prefWidth="80.0"/>
            <TableColumn fx:id="deleteColumn" text="Delete" prefWidth="80.0"/>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="userNameColumn" text="User Name" prefWidth="150.0"/>
            <TableColumn fx:id="doctorNameColumn" text="Doctor Name" prefWidth="150.0"/>
            <TableColumn fx:id="profileSpecialtyColumn" text="Profile Specialty" prefWidth="150.0"/>
            <TableColumn fx:id="consultationDateColumn" text="Consultation Date" prefWidth="150.0"/>
            <TableColumn fx:id="isCompletedColumn" text="Completed" prefWidth="100.0"/>
        </columns>
    </TableView>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
</VBox>