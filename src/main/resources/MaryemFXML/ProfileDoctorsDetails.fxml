<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" styleClass="main-vbox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Maryem.ProfileDoctorsDetailsController">
    <HBox alignment="CENTER_LEFT" styleClass="header">
        <padding>
            <Insets top="10" right="20" bottom="10" left="20"/>
        </padding>
        <Text fx:id="headerTitle" text="Profile Details" styleClass="header-title"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="backButton" text="Back" onAction="#goBack" styleClass="back-button"/>
    </HBox>
    <VBox alignment="CENTER" spacing="10" styleClass="content">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Text fx:id="title" text="Profile Details" styleClass="title"/>
        <Label fx:id="nameLabel" text="Name" styleClass="label"/>
        <Label fx:id="biographyLabel" text="Biography" styleClass="label" wrapText="true"/>
        <Label fx:id="specialtyLabel" text="Specialty" styleClass="label"/>
        <Button fx:id="resourcesButton" text="View Resources" onAction="#openResources" styleClass="button"/>
        <Label fx:id="priceLabel" text="Price" styleClass="label"/>
        <Label fx:id="latitudeLabel" text="Latitude" styleClass="label"/>
        <Label fx:id="longitudeLabel" text="Longitude" styleClass="label"/>
        <Label fx:id="commentsErrorLabel" text="" styleClass="error-label"/>
        <VBox fx:id="commentsContainer" spacing="10" styleClass="comments-container"/>

    </VBox>
    <HBox alignment="CENTER_LEFT" styleClass="header">
        <padding>
            <Insets top="10" right="20" bottom="10" left="20"/>
        </padding>

        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="updateButton" text="Update" onAction="#openUpdateProfile" styleClass="button" visible="false" managed="false"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#deleteProfile" styleClass="button" visible="false" managed="false"/>

    </HBox>
</VBox>