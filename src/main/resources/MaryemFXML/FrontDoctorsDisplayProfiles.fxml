<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" prefWidth="800" prefHeight="600" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Maryem.FrontDoctorsDisplayProfilesController" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Les Medecins Disponibles" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Button to view consultations -->
    <Button fx:id="viewConsultationsButton" text="Voir Mes Consultations" onAction="#showConsultationsPage"
            style="-fx-font-size: 16; -fx-background-color: invisible; -fx-text-fill: Black;">
        <graphic>
            <ImageView fitWidth="55" fitHeight="55" preserveRatio="true">
                <Image url="https://img.icons8.com/?size=100&amp;id=113573&amp;format=png&amp;color=000000"/>
            </ImageView>
        </graphic>
    </Button>

    <!-- Container for profile cards -->
    <FlowPane fx:id="profilesContainer"
              hgap="10.0" vgap="15.0"
              alignment="CENTER"
              prefWidth="920"
              maxWidth="920"
              >
    </FlowPane>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
</VBox>