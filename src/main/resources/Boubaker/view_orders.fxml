<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Boubaker.ViewOrdersController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #F7F7F7;"
      prefWidth="900">
    <stylesheets>
        <URL value="@/css/dashboard-sidebar.css" />
        <URL value="@/style.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Label text="Orders List" style="-fx-font-family: Arial; -fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />

    <TableView fx:id="ordersTable" prefWidth="850" prefHeight="500" styleClass="styled-table">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
            <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="100"/>
            <TableColumn fx:id="packIdColumn" text="Pack ID" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="paymentMethodColumn" text="Payment Method" prefWidth="120"/>
            <TableColumn fx:id="expiryDateColumn" text="Expiry Date" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: #C20114; -fx-font-family: Arial; -fx-font-size: 12;"/>
</VBox>