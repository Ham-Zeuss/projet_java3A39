<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Boubaker.UpdateOrderController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #F7F7F7;"
      prefWidth="400">
    <stylesheets>
        <URL value="@/css/dashboard-sidebar.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Label text="Update Order" style="-fx-font-family: Arial; -fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />

    <VBox spacing="10" style="-fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 15;">
        <Label text="Order ID" style="-fx-font-family: Arial; -fx-font-size: 14; -fx-text-fill: #333333;" />
        <TextField fx:id="idField" editable="false" style="-fx-font-family: Arial; -fx-font-size: 12;" />

        <Label text="User ID" style="-fx-font-family: Arial; -fx-font-size: 14; -fx-text-fill: #333333;" />
        <TextField fx:id="userIdField" style="-fx-font-family: Arial; -fx-font-size: 12;" />

        <Label text="Pack ID" style="-fx-font-family: Arial; -fx-font-size: 14; -fx-text-fill: #333333;" />
        <TextField fx:id="packIdField" style="-fx-font-family: Arial; -fx-font-size: 12;" />

        <Label text="Amount" style="-fx-font-family: Arial; -fx-font-size: 14; -fx-text-fill: #333333;" />
        <TextField fx:id="amountField" style="-fx-font-family: Arial; -fx-font-size: 12;" />

        <Label text="Payment Method" style="-fx-font-family: Arial; -fx-font-size: 14; -fx-text-fill: #333333;" />
        <TextField fx:id="paymentMethodField" style="-fx-font-family: Arial; -fx-font-size: 12;" />

        <Label text="Status" style="-fx-font-family: Arial; -fx-font-size: 14; -fx-text-fill: #333333;" />
        <TextField fx:id="statusField" style="-fx-font-family: Arial; -fx-font-size: 12;" />

        <Button fx:id="updateButton" text="Update Order" style="-fx-background-color: #C20114; -fx-text-fill: #FFFFFF; -fx-font-family: Arial; -fx-font-size: 12; -fx-padding: 5 10; -fx-background-radius: 5;" />
    </VBox>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: #C20114; -fx-font-family: Arial; -fx-font-size: 12;"/>
</VBox>