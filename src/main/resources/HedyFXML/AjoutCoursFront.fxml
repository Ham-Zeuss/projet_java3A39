<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.Hedy.AjoutCoursFront"
            style="-fx-background-color: #f5f5f5;"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button text="Retour" onAction="#retourCours"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15 8 15;"/>
        <Label text="Ajouter un Cours" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <!-- Form Container -->
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="80" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>
        <style>
            -fx-background-color: white;
            -fx-background-radius: 10;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 5, 0, 0);
            -fx-padding: 30;
        </style>

        <!-- Title Field -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Titre du Cours:" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="titleField" promptText="Entrez le titre du cours" prefWidth="400"/>
        </HBox>

        <!-- PDF Upload Field -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="PDF du Cours:" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
            <TextField fx:id="pdfNameField" prefWidth="250" promptText="Nom du fichier PDF" editable="false" />
            <Button text="Choisir Fichier" onAction="#selectPdfFile"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 15 8 15;" />
        </HBox>

        <!-- Submit Button -->
        <Button text="Ajouter Cours" onAction="#saveCours"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20 10 20;"/>

    </VBox>

</AnchorPane>