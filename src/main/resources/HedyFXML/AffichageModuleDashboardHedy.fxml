<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Hedy.Dahsboard.AffichageModuleDashboardController"
      prefHeight="600.0" prefWidth="900.0"
      spacing="10">
    <stylesheets>
        <URL value="@/css/displayprofilesback.css"/>
    </stylesheets>

    <!-- Title -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Modules Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Search Section -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Search:"/>
        <TextField fx:id="searchField" promptText="Enter module title..." prefWidth="350"/>
    </HBox>

    <!-- TableView for displaying modules -->
    <TableView fx:id="modulesTable" VBox.vgrow="ALWAYS">
        <columns>
            <!-- Title Column -->
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150.0" style="-fx-alignment: CENTER;"/>
            <!-- Description Column -->
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250.0" style="-fx-alignment: CENTER;"/>
            <!-- Courses Column -->
            <TableColumn fx:id="coursesColumn" text="Courses" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
            <!-- Level Column -->
            <TableColumn fx:id="levelColumn" text="Level" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
            <!-- Actions Column -->
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="220.0" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <!-- Button to Add a Module -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addButton" styleClass="icon-button" onAction="#openAjoutPopup"/>
    </HBox>

</VBox>