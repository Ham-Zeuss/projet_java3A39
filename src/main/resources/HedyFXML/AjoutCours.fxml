<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.Hedy.AjoutCoursController"
      prefHeight="400.0" prefWidth="600.0"
      spacing="15">
    <stylesheets>
        <URL value="@/css/displayprofilesback.css"/>
        <URL value="@/style.css"/>
    </stylesheets>

    <!-- Form Container -->
    <VBox spacing="15" alignment="CENTER">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>

        <!-- Title Field -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Titre du Cours:"/>
            <TextField fx:id="titleField" promptText="Entrez le titre du cours" prefWidth="400"/>
        </HBox>

        <!-- PDF Upload Field -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="PDF du Cours:"/>
            <TextField fx:id="pdfNameField" prefWidth="300" promptText="Nom du fichier PDF" editable="false"/>
            <Button fx:id="selectPdfButton" styleClass="icon-button" onAction="#selectPdfFile"/>
        </HBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="saveButton" styleClass="icon-button" onAction="#saveCours"/>
            <Button fx:id="cancelButton" styleClass="icon-button" onAction="#cancel"/>
        </HBox>
    </VBox>
</VBox>