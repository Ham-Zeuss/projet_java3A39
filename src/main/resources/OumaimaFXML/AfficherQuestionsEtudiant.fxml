<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="Controller.Oumaima.AfficherQuestionsEtudiantController" prefHeight="600" prefWidth="800"
            style="-fx-background-color: #eceff1;">
    <stylesheets>
        <URL value="@../css/styles.css" />
        <URL value="@../css/afficherquestion.css" /> <!-- New CSS file -->
    </stylesheets>

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Questions du Quiz" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2d3748;" />
            <Button fx:id="backButton" text="Retour" styleClass="back-button" onAction="#goBackToQuizList" />
        </HBox>
        <ScrollPane fitToWidth="true">
            <VBox fx:id="questionContainer" spacing="15">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>
        </ScrollPane>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="submitAllButton" text="Envoyer" styleClass="submit-button" onAction="#submitAllAnswers" />
        </HBox>
    </VBox>
</AnchorPane>