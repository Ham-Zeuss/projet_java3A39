<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="15.0"
      prefWidth="400.0"
      prefHeight="300.0"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30.0;">

    <TextField fx:id="textField1"
               promptText="Enter text here..."
               maxWidth="300.0"
               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14; -fx-padding: 10;" />

    <TextField fx:id="textField2"
               promptText="Enter more text here..."
               maxWidth="300.0"
               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14; -fx-padding: 10;" />

    <Button text="Do Nothing"
            maxWidth="300.0"
            style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8; -fx-padding: 10 20;" />
</VBox>
