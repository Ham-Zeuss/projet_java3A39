<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.Oumaima.addQuestioncontroller"
            prefHeight="550.0" prefWidth="700.0"
            style="-fx-background-color: white;">

    <stylesheets>
        <URL value="@/css/addquestion.css" />
    </stylesheets>

    <VBox alignment="CENTER" spacing="10.0" styleClass="card" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <!-- Titre et Bouton Retour -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="option-container">
            <Label text="Ajouter une Nouvelle Question" styleClass="heading" />
            <Button fx:id="backButton" text="Retour" styleClass="return-button" onAction="#goBackToQuizList" prefWidth="120.0" />
        </HBox>

        <!-- Champ Question -->
        <TitledPane text="Question" collapsible="false" styleClass="titled-pane">
            <content>
                <VBox spacing="8.0">
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                    <TextArea fx:id="questionTextArea" promptText="Entrez le texte de la question" styleClass="input-field" prefWidth="500.0" prefHeight="80.0"/>
                </VBox>
            </content>
        </TitledPane>

        <!-- Type de question -->
        <TitledPane text="Type de Question" collapsible="false" styleClass="titled-pane">
            <content>
                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="option-container">
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                    <RadioButton fx:id="radioType" text="RadioButton (Choix unique)" styleClass="option-control">
                        <toggleGroup>
                            <ToggleGroup fx:id="questionTypeGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="checkboxType" text="CheckBox (Choix multiple)" styleClass="option-control" toggleGroup="$questionTypeGroup"/>
                </HBox>
            </content>
        </TitledPane>

        <!-- Options -->
        <TitledPane text="Options de RÃ©ponse" collapsible="false" styleClass="titled-pane">
            <content>
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                    <HBox spacing="8.0" alignment="CENTER_LEFT" styleClass="option-container">
                        <Label text="Option 1:" styleClass="para" prefWidth="80.0"/>
                        <TextField fx:id="option1Field" promptText="Entrez l'option 1" styleClass="input-field" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption1" text="Correcte" styleClass="option-control"/>
                    </HBox>
                    <HBox spacing="8.0" alignment="CENTER_LEFT" styleClass="option-container">
                        <Label text="Option 2:" styleClass="para" prefWidth="80.0"/>
                        <TextField fx:id="option2Field" promptText="Entrez l'option 2" styleClass="input-field" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption2" text="Correcte" styleClass="option-control"/>
                    </HBox>
                    <HBox spacing="8.0" alignment="CENTER_LEFT" styleClass="option-container">
                        <Label text="Option 3:" styleClass="para" prefWidth="80.0"/>
                        <TextField fx:id="option3Field" promptText="Entrez l'option 3" styleClass="input-field" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption3" text="Correcte" styleClass="option-control"/>
                    </HBox>
                    <HBox spacing="8.0" alignment="CENTER_LEFT" styleClass="option-container">
                        <Label text="Option 4:" styleClass="para" prefWidth="80.0"/>
                        <TextField fx:id="option4Field" promptText="Entrez l'option 4" styleClass="input-field" prefWidth="500.0"/>
                        <CheckBox fx:id="correctOption4" text="Correcte" styleClass="option-control"/>
                    </HBox>
                </VBox>
            </content>
        </TitledPane>

        <!-- Bouton Enregistrer -->
        <HBox alignment="CENTER_RIGHT" styleClass="option-container">
            <Button fx:id="addQuestionButton"
                    text="Enregistrer"
                    styleClass="quiz-button"
                    onAction="#handleAddQuestion"
                    prefWidth="120.0" />
        </HBox>
    </VBox>
</AnchorPane>