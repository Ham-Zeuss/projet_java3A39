<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.AffichageModuleController"
            style="-fx-background-color: #f5f5f5;"
            prefHeight="600.0" prefWidth="1000.0">

    <!-- Header with Add Button -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button text="Ajouter Module" onAction="#goToAjoutPage"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15 8 15;"/>
    </HBox>

    <!-- Grid for Module Cards -->
    <GridPane fx:id="modulesGrid" AnchorPane.topAnchor="60" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>
        <hgap>20</hgap>
        <vgap>20</vgap>
    </GridPane>
</AnchorPane>