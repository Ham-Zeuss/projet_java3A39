<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.ListStoreItemsAdminController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Store Items - Admin" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TableView fx:id="storeItemsTable" prefWidth="900.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150.0"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200.0"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="100.0"/>
            <TableColumn fx:id="imageColumn" text="Image" prefWidth="150.0"/>
            <TableColumn fx:id="stockColumn" text="Stock" prefWidth="100.0"/>
            <TableColumn fx:id="updateColumn" text="Update" prefWidth="100.0"/>
            <TableColumn fx:id="deleteColumn" text="Delete" prefWidth="100.0"/>
        </columns>
    </TableView>

    <HBox spacing="10.0">
        <Button fx:id="createTitleButton" text="Create Title" onAction="#handleCreateTitle"/>
        <Button fx:id="createStoreItemButton" text="Create Store Item" onAction="#handleCreateStoreItem"/>
    </HBox>

    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
</VBox>