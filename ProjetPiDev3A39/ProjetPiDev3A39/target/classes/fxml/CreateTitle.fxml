<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.CreateTitleController" styleClass="main-vbox">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Text text="Create New Title" styleClass="header-text"/>

    <VBox spacing="15.0" alignment="CENTER" styleClass="form-container">
        <Label text="Name" styleClass="form-label"/>
        <TextField fx:id="nameField" promptText="Enter title name" styleClass="form-field"/>

        <Label text="Points Required" styleClass="form-label"/>
        <TextField fx:id="pointsField" promptText="Enter points or leave blank" styleClass="form-field" disable="false"/>

        <Label text="Price (optional)" styleClass="form-label"/>
        <TextField fx:id="priceField" promptText="Enter price or leave blank" styleClass="form-field" disable="false"/>

        <HBox spacing="20.0" alignment="CENTER">
            <Button text="Create" onAction="#createTitle" styleClass="form-button"/>
            <Button text="Clear" onAction="#clearForm" styleClass="form-button"/>
        </HBox>

        <Label fx:id="messageLabel" text="" styleClass="message-label"/>
    </VBox>
</VBox>