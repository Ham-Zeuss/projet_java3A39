<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.ListTitlesController" styleClass="main-vbox">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Text text="Titles List" styleClass="header-text"/>

    <TableView fx:id="titlesTable" prefWidth="800.0" prefHeight="600.0" styleClass="styled-table">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="80.0"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="300.0"/>
            <TableColumn fx:id="pointsRequiredColumn" text="Points Required" prefWidth="220.0"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="200.0"/>
            <TableColumn fx:id="updateColumn" text="Edit" prefWidth="100.0"/>
            <TableColumn fx:id="deleteColumn" text="Actions" prefWidth="100.0"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="200.0"/>


        </columns>
    </TableView>

    <Label fx:id="errorLabel" text="" styleClass="error-label"/>
</VBox>