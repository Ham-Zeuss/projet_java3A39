<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="contentContainer" alignment="CENTER" spacing="20" styleClass="content-container" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BackOfficeController">
    <children>
        <TableView fx:id="packTable" styleClass="pack-table">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
                <TableColumn fx:id="priceColumn" prefWidth="100" text="Price" />
                <TableColumn fx:id="featuresColumn" prefWidth="200" text="Features" />
                <TableColumn fx:id="validityPeriodColumn" prefWidth="100" text="Validity (days)" />
            </columns>
        </TableView>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="input-label" text="Name:" />
                <VBox>
                    <TextField fx:id="nameField" styleClass="input-field" />
                    <Label fx:id="nameErrorLabel" styleClass="error-label" text="" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="input-label" text="Price:" />
                <VBox>
                    <TextField fx:id="priceField" styleClass="input-field" />
                    <Label fx:id="priceErrorLabel" styleClass="error-label" text="" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="input-label" text="Features:" />
                <VBox>
                    <TextField fx:id="featuresField" styleClass="input-field" />
                    <Label fx:id="featuresErrorLabel" styleClass="error-label" text="" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="input-label" text="Validity Period:" />
                <VBox>
                    <TextField fx:id="validityPeriodField" styleClass="input-field" />
                    <Label fx:id="validityErrorLabel" styleClass="error-label" text="" />
                </VBox>
            </HBox>
            <Label fx:id="errorLabel" styleClass="error-label" text="" />
            <HBox fx:id="buttonBox" alignment="CENTER" spacing="10" styleClass="button-box">
                <children>
                    <Button onAction="#addPack" styleClass="action-button" text="Add Pack" />
                    <Button onAction="#updatePack" styleClass="action-button" text="Update Pack" />
                    <Button onAction="#deletePack" styleClass="action-button" text="Delete Pack" />
                </children>
            </HBox>
        </VBox>
    </children>
</VBox>